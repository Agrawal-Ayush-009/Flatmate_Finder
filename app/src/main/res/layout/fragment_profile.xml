<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/round_arrow_back_ios_24"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="34dp"
        />

    <TextView
        android:id="@+id/nameHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/product_sans_bold"
        android:text="My Profile"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="78dp"
        />

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameHeading"
        android:layout_marginTop="12dp"
        android:src="@drawable/profile_photo_ff"
        />

    <ImageView
        android:id="@+id/editProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/profilePic"
        app:layout_constraintBottom_toBottomOf="@id/profilePic"
        android:src="@drawable/edit"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="-4dp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/product_sans_bold"
        android:text="Ayush Agrawal"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:layout_constraintTop_toBottomOf="@id/profilePic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:text="B.Tech 2nd"
        app:layout_constraintRight_toLeftOf="@+id/branch"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:fontFamily="@font/product_sans_bold"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:text="CSE"
        android:textColor="@color/black"
        android:fontFamily="@font/product_sans_bold"
        android:layout_marginTop="12dp"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@+id/year"
        />

    <TextView
        android:id="@+id/bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/product_sans_bold"
        android:text="bio"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/branch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="28dp"/>

    <EditText
        android:id="@+id/editBio"
        android:layout_width="0dp"
        android:layout_height="109dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bio"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_text_2"
        android:textColor="@color/black"
        android:text="Main NINJA HATORI aagaya hun..."
        android:gravity="top"
        android:padding="8dp"
        android:fontFamily="@font/product_sans_regular"
        android:textSize="12dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/editBio"
        app:layout_constraintTop_toBottomOf="@+id/editBio"
        android:background="@drawable/button_save"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="4dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>